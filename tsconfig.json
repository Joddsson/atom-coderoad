{
 "compileOnSave": true,
 "buildOnSave": true,
 "compilerOptions": {
  "target": "ES5",
  "module": "commonjs",
  "declaration": false,
  "noImplicitAny": false,
  "removeComments": true,
  "noLib": false,
  "jsx": "react",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "outDir": "lib",
  "moduleResolution": "node",
  "rootDirs": ["src"],
  "strictNullChecks": true
 },
 "filesGlob": [
  "*.ts",
  "**/*.ts",
  "**/*.tsx",
  "!coverage",
  "!__tests__",
  "!**/*.spec.ts",
  "!**/*.spec.tsx",
  "!**/*.test.ts",
  "!**/*.test.tsx"
 ],
 "exclude": [
  "node_modules"
 ],
 "atom": {
  "rewriteTsconfig": false
  }
}
