{
 "compilerOptions": {
  "target": "ES5",
  "module": "commonjs",
  "declaration": false,
  "noImplicitAny": false,
  "removeComments": true,
  "jsx": "react",
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "outDir": "lib",
  "moduleResolution": "node",
  "strictNullChecks": true,
  "rootDirs": [
    "src"
  ]
 },
 "filesGlob": [
   "**/*.d.ts",
   "*.ts",
   "*.tsx",
   "**/*.ts",
   "**/*.tsx"
 ],
 "exclude": [
    "node_modules",
    "src/__tests__",
    "src/__coverage__",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
